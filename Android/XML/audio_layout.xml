<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <SeekBar
        android:id="@+id/recyclerview_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/recyclerview_seekbar_amp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progress="50"
        app:layout_constraintStart_toStartOf="@id/recyclerview_seekbar"
        app:layout_constraintTop_toBottomOf="@id/recyclerview_seekbar" />

    <TextView
        android:id="@+id/recyclerview_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/square_wave"
        app:layout_constraintStart_toStartOf="@id/recyclerview_seekbar_amp"
        app:layout_constraintTop_toBottomOf="@id/recyclerview_seekbar_amp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/recyclerview_record_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Record"
        android:textColor="#FFFFFF"
        android:background="@android:color/holo_red_light"
        app:layout_constraintEnd_toEndOf="@id/recyclerview_seekbar_amp"
        app:layout_constraintTop_toBottomOf="@id/recyclerview_seekbar_amp"
        android:layout_marginRight="20dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>
</layout>